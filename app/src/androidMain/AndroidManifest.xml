<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <queries>
        <intent>
            <action android:name="android.settings.APP_LOCALE_SETTINGS" />
        </intent>

        <intent>
            <action android:name="android.support.customtabs.action.CustomTabsService" />
        </intent>
    </queries>

    <application
        android:name=".app.infrastructure.android.FoodYouApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="${applicationIcon}"
        android:label="@string/app_name"
        android:localeConfig="@xml/locales_config"
        android:roundIcon="${applicationRoundIcon}"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodYou"
        tools:targetApi="36">

        <activity
            android:name=".app.infrastructure.android.MainActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".app.infrastructure.android.ShareProductActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/Theme.FoodYou"
            android:windowSoftInputMode="adjustResize">

            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>

        </activity>

        <activity
            android:name=".app.infrastructure.android.CrashReportActivity"
            android:exported="false"
            android:label="CrashReportActivity"
            android:theme="@style/Theme.FoodYou" />

        <activity
            android:name=".app.infrastructure.android.DeveloperActivity"
            android:exported="false"
            android:label="DeveloperActivity"
            android:theme="@style/Theme.FoodYou" />

        <service
            android:name="androidx.appcompat.app.AppLocalesMetadataHolderService"
            android:enabled="false"
            android:exported="false">
            <meta-data
                android:name="autoStoreLocales"
                android:value="true" />
        </service>
    </application>

</manifest>